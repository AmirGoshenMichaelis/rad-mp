
MPI_PATH  = /lib64/openmpi/

CC   = ${MPI_PATH}/bin/mpicc
CPP  = ${MPI_PATH}/bin/mpic++

#----------------------------------------------------------------------------
# Compiler flags
#----------------------------------------------------------------------------
CFLAGS = -c -Wall

#----------------------------------------------------------------------------
# Linker flags
#----------------------------------------------------------------------------

LFLAGS = -ggdb -o

#----------------------------------------------------------------------------
# Additional commands
#----------------------------------------------------------------------------

MV = mv -f
RM = rm -f
ECHO = echo


all: main.cc opt_data.cc util.cc opt_data.h util.h
	$(CPP) -g main.cc opt_data.cc util.cc -o main
